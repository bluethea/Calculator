<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="center|right"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TableLayout
        android:id="@+id/tbl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_number"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/back_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_span="2"/>

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/clear_btn"
                app:layout_constraintBottom_toTopOf="@+id/plus_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/plus_minus_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/plus_minus_btn"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/sq_root_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/sq_root_btn"
                tools:layout_editor_absoluteX="325dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/seven_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/seven_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/eight_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/eight_btn"
                app:layout_constraintBottom_toTopOf="@+id/minus_btn"
                app:layout_constraintEnd_toStartOf="@+id/divide_btn"
                app:layout_constraintStart_toEndOf="@+id/eight_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/nine_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nine_btn"
                app:layout_constraintBottom_toTopOf="@+id/plus_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/divide_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/divide_btn"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/multiply_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/multiply_btn"
                tools:layout_editor_absoluteX="325dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/four_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/four_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/five_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/five_btn"
                app:layout_constraintBottom_toTopOf="@+id/minus_btn"
                app:layout_constraintEnd_toStartOf="@+id/divide_btn"
                app:layout_constraintStart_toEndOf="@+id/eight_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/six_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/six_btn"
                app:layout_constraintBottom_toTopOf="@+id/plus_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/minus_btn"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_span="1"/>
            <Button
                android:id="@+id/plus_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/plus_btn"
                tools:layout_editor_absoluteX="256dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_span="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/one_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/one_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/two_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/two_btn"
                app:layout_constraintBottom_toTopOf="@+id/minus_btn"
                app:layout_constraintEnd_toStartOf="@+id/divide_btn"
                app:layout_constraintStart_toEndOf="@+id/eight_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/three_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/three_btn"
                app:layout_constraintBottom_toTopOf="@+id/plus_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <Button
                android:id="@+id/point_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/point_btn"
                app:layout_constraintBottom_toTopOf="@+id/minus_btn"
                app:layout_constraintEnd_toStartOf="@+id/divide_btn"
                app:layout_constraintStart_toEndOf="@+id/eight_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <Button
                android:id="@+id/equal_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/equal_btn"
                tools:layout_editor_absoluteX="325dp"
                tools:layout_editor_absoluteY="246dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/zero_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/zero_btn"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_span="5"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>